@page "/email-success"

<div class="py-5 min-vh-100 d-flex justify-content-center align-items-center px-3">
    <div class="card text-center p-5 shadow" style="max-width: 700px; border-radius: 17px;">
        <div class="mb-4">
            <i class="bi bi-patch-check-fill text-primary" style="font-size: 5rem;"></i>
        </div>
        <h2 class="text-primary fw-bold">Success</h2>
        <p class="fs-5 mt-3">Congratulations! Your event registration was successful. We will send invitations based on your provided guest list shortly.</p>
        <p class="fs-6">We are honored to serve you.</p>

        <div class="row mt-4 g-3">
            <div class="col-12 col-md-6">
                <a class="btn btn-outline-secondary w-100 py-2 rounded-pill" href="/email-template">Go Back</a>
            </div>
            <div class="col-12 col-md-6">
                <a class="btn btn-primary w-100 py-2 rounded-pill" href="/events-register">Register Another</a>
            </div>
        </div>
    </div>
</div>
